{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build hello world",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-I${workspaceFolder}/headers",
                "-o",
                "helloworld",
                "${workspaceFolder}/codes/helloworld.c",
                "${workspaceFolder}/codes/other.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}